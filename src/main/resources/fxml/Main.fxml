<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="rootBorderPane" prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <center>
      <TableView fx:id="videoTableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="75.0" text="序号" />
          <TableColumn fx:id="nameColumn" prefWidth="75.0" text="名称" />
            <TableColumn fx:id="descriptionColumn" prefWidth="485.0" text="简介" />
            <TableColumn fx:id="showDetailColumn" prefWidth="64.0" text="查看详情" />
        </columns>
      </TableView>
   </center>
   <top>
      <HBox prefHeight="40.0" BorderPane.alignment="CENTER_RIGHT">
         <children>
            <TextField fx:id="searchKey">
               <HBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchAction" text="搜索">
               <HBox.margin>
                  <Insets left="20.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </top>
</BorderPane>
